<Window x:Class="Project_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_WPF"
        mc:Ignorable="d"
        Title="Первое приложение 221 гр"
        Icon="Windows/game-robot-concepts-vector.jpg"
        Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Привет 221 группа!!!"
                   Grid.Column="1"
                   Grid.Row="0"
                   FontSize="24"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <TextBox Grid.Column="1"
                 Grid.ColumnSpan="2"
                 Grid.Row="1"
                 Height="50"
                 Width="200"
                 FontSize="22"
                 VerticalContentAlignment="Center"
                 Padding="5 0 0 0"
                 FontWeight="Bold"
                 Name="TestTb"
                 TextChanged="TestTb_TextChanged"/>

        <Button Grid.Column="1"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Height="50"
                Width="150"
                Content="Вывести"
                Name="SaveBtn"
                Click="SaveBtn_Click"/>
        <TextBlock Grid.Column="1"
                   Grid.Row="3"
                   Grid.ColumnSpan="2"
                   Name="TestTbl"
                   FontSize="24"
                   FontWeight="DemiBold"/>

    </Grid>
</Window>
