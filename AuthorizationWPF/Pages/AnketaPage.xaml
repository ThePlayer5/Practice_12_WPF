<Page x:Class="AuthorizationWPF.Pages.AnketaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuthorizationWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="AnketaPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Content="Сохранить"
                FontSize="20"
                Grid.Column="3"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="10"/>
        <StackPanel Grid.Column="1"
            Grid.Row="2"
            Grid.ColumnSpan="4"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock Text="Имя:"
                       FontSize="25"
                       />
            <TextBox x:Name="LoginTb"
                     FontSize="20"
                     Width="250"
                     Height="45"
                     Margin="90 0 0 0"
                     />
        </StackPanel>
        <StackPanel Grid.Column="1"
            Grid.Row="3"
            Grid.ColumnSpan="4"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock Text="Пол:"
                       FontSize="25"
                       />
            <RadioButton Content="Женский"
                         FontSize="20"
                         VerticalContentAlignment="Center"
                         FlowDirection="RightToLeft"
                         Margin="90 0 0 0"/>
            <RadioButton Content="Мужской"
                         FontSize="20"
                         VerticalContentAlignment="Center"
                         FlowDirection="RightToLeft"
                         Margin="45 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
            Grid.Row="4"
            Grid.ColumnSpan="4"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock Text="Дата рождения:"
                       FontSize="25"
                       />
            <DatePicker FontSize="20"
                        Margin="65 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Grid.Row="5"
                    Grid.ColumnSpan="4"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock Text="Любимое животное:"
                       FontSize="25"
                       />
            <ComboBox FontSize="20"
                      Margin="40 0 0 0"
                      Width="110">
                <ComboBoxItem Content="Собак"
                              FontSize="15"/>
                <ComboBoxItem Content="Кошак"
                              FontSize="15"/>
                <ComboBoxItem Content="Тикр"
                              FontSize="15"/>
                <ComboBoxItem Content="Леф"
                              FontSize="15"/>
                <ComboBoxItem Content="Мэдвэд"
                              FontSize="15"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Column="1"
            Grid.Row="6"
            Grid.ColumnSpan="4"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock Text="Студент:"
               FontSize="25"
               />
            <Viewbox  Margin="260 0 0 0"
                      Width="30">
                <CheckBox/>
            </Viewbox>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Grid.Row="7"
                    Grid.ColumnSpan="4"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
        </StackPanel>

    </Grid>
</Page>
